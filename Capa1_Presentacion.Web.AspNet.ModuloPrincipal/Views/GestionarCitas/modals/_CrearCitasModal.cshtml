<!-- Modal Mejorado -->
<div class="modal fade" id="ModalNuevaCita" tabindex="-1" aria-labelledby="ModalNuevaCitaLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-3">
            <!-- Header -->
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="ModalNuevaCitaLabel">
                    <i class="fa-solid fa-calendar-plus me-2"></i> Registrar Cita
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <form id="formCita">
                    <!-- Buscar paciente -->
                    <div class="mb-3">
                        <label for="inputDniPaciente" class="form-label fw-semibold">
                            <i class="fa-solid fa-id-card me-2 text-primary"></i> DNI Paciente
                        </label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputDniPaciente"
                                   placeholder="Ingrese DNI" maxlength="8"
                                   aria-label="dni" aria-describedby="dni-paciente">
                            <button class="btn btn-outline-primary" type="button" id="button-addon2">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Datos del paciente -->
                    <div class="collapse" id="datosPaciente">
                        <div class="card border-info mb-3">
                            <div class="card-body p-3">
                                <p class="mb-1"><strong>👤 Nombre:</strong> <span id="pacienteNombre"></span></p>
                                <p class="mb-1"><strong>📌 Estado:</strong> <span class="badge bg-secondary" id="pacienteEstado"></span></p>
                                <p class="mb-0"><strong>🆔 Código:</strong> <span id="pacienteCodigo"></span></p>
                            </div>
                        </div>
                    </div>

                    <!-- Tipo de consulta -->
                    <div class="mb-3">
                        <label for="inputSelectTipoConsulta" class="form-label fw-semibold">
                            <i class="fa-solid fa-stethoscope me-2 text-primary"></i> Tipo de Consulta
                        </label>
                        <select class="form-select" id="inputSelectTipoConsulta">
                            <option selected disabled>Seleccione el tipo de consulta...</option>
                        </select>
                    </div>

                    <!-- Fecha y hora -->
                    <div class="mb-3">
                        <label for="inputFechaHora" class="form-label fw-semibold">
                            <i class="fa-solid fa-calendar-day me-2 text-primary"></i> Fecha y hora
                        </label>
                        <input type="datetime-local" class="form-control" id="inputFechaHora" readonly>
                    </div>

                    <!-- Hora inicio -->
                    <div class="mb-3">
                        <label for="inputHoraInicio" class="form-label fw-semibold">
                            <i class="fa-solid fa-clock me-2 text-primary"></i> Hora Inicio
                        </label>
                        <input type="text" class="form-control" id="inputHoraInicio" readonly>
                    </div>

                    <!-- Médico -->
                    <div class="mb-3">
                        <label for="inputMedicoNombre" class="form-label fw-semibold">
                            <i class="fa-solid fa-user-doctor me-2 text-primary"></i> Nombre del Médico
                        </label>
                        <input type="text" class="form-control" id="inputMedicoNombre" readonly>
                    </div>

                    <!-- Hidden -->
                    <input type="hidden" id="inputMedicoCodigo" name="MedicoCodigo" />
                    <input type="hidden" id="inputEspecialidadModal" />
                </form>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark me-1"></i> Cancelar
                </button>
                <button type="button" id="btnGuardarCita" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk me-1"></i> Guardar Cita
                </button>
            </div>
        </div>
    </div>
</div>

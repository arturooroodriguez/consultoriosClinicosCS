    ViewBag.Title = "Gestión de Citas";
}

@section customStyles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .card-custom {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }
        .card-custom .card-header {
            background: linear-gradient(90deg, #63b2ff, #007bff);
            color: white;
            font-weight: 600;
        }
        .list-group-item {
            cursor: pointer;
        }
        .list-group-item:hover {
            background-color: #f1f7ff;
        }
    </style>
}

<div class="container my-4">
    <div class="card card-custom">
        <div class="card-header">
            <i class="fa-solid fa-calendar-check me-2"></i> Agendar Cita
        </div>
        <div class="card-body">
            <form method="post">
                <!-- Selección de especialidad -->
                <div class="mb-3">
                    <label for="inputSelectEspecialidad" class="form-label fw-semibold">
                        <i class="fa-solid fa-stethoscope me-2 text-primary"></i> Especialidad
                    </label>
                    <select class="form-select" id="inputSelectEspecialidad">
                        <option selected disabled>Seleccione una especialidad...</option>
                    </select>
                </div>

                <!-- Selección de fecha -->
                <div class="mb-3">
                    <label for="fechaSeleccionada" class="form-label fw-semibold">
                        <i class="fa-solid fa-calendar-day me-2 text-primary"></i> Fecha
                    </label>
                    <input type="date" id="fechaSeleccionada" name="fechaSeleccionada" 
                           class="form-control" onchange="cargarHorarios()">
                </div>

                <!-- Horarios -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="fa-solid fa-clock me-2 text-primary"></i> Horarios Disponibles
                    </label>
                    <div id="horariosDisponibles" class="list-group border rounded">
                        <div class="list-group-item text-muted text-center">
                            Seleccione una fecha para ver horarios
                        </div>
                    </div>
                </div>

                
                <div class="d-grid">
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="confirmarCancelacionModal" tabindex="-1" aria-labelledby="confirmarCancelacionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i> Confirmar Cancelación
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas cancelar esta cita?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark me-1"></i> No
                </button>
                <button type="button" class="btn btn-danger" id="btnConfirmarCancelacion">
                    <i class="fa-solid fa-trash me-1"></i> Sí, cancelar
                </button>
            </div>
        </div>
    </div>
</div>



